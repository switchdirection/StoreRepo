@using Application.Games.Model
@model GameEditModel

<div class="container mt-5" style="padding-top:40px; margin-bottom:50px;">
    <h2>Редактирование игры</h2>
    <form asp-action="GameEdit" method="post">
        <input type="hidden" asp-for="Id" />

        <!-- Название -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Название</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <!-- Описание -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Описание</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <!-- Количество -->
        <div class="mb-3">
            <label asp-for="StockQuantity" class="form-label">Количество в наличии</label>
            <input asp-for="StockQuantity" class="form-control" type="number" required />
        </div>

        <!-- Цена -->
        <div class="mb-3">
            <label asp-for="Price" class="form-label">Цена</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" required />
        </div>

        <!-- Рейтинг -->
        <div class="mb-3">
            <label asp-for="Rating" class="form-label">Рейтинг</label>
            <input asp-for="Rating" class="form-control" type="number" step="0.1" />
        </div>

        <!-- Статус IsDeleted -->
        <div class="mb-3">
            <label class="form-check-label" asp-for="IsDeleted" style="margin-right: 25px;">Удалено</label>
            <input asp-for="IsDeleted" class="form-check-input" type="checkbox" />
        </div>

        <!-- Категории -->
        <div class="mb-3">
            <label class="form-label">Категории</label>
            <div>
                @foreach (var category in Model.AllCategories)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="SelectedCategoryIds"
                               value="@category.CategoryId" @(Model.SelectedCategoryIds.Contains(category.CategoryId) ? "checked" : "") />
                        <label class="form-check-label">@category.CategoryName</label>
                    </div>
                }
            </div>
        </div>

        <!-- Разработчики -->
        <div class="mb-3">
            <label class="form-label">Разработчики</label>
            <div>
                @foreach (var developer in Model.AllDevelopers)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="SelectedDeveloperIds"
                               value="@developer.DeveloperId" @(Model.SelectedDeveloperIds.Contains(developer.DeveloperId) ? "checked" : "") />
                        <label class="form-check-label">@developer.DeveloperName</label>
                    </div>
                }
            </div>
        </div>

        <!-- Издатели -->
        <div class="mb-3">
            <label class="form-label">Издатели</label>
            <div>
                @foreach (var publisher in Model.AllPublishers)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="SelectedPublisherIds"
                               value="@publisher.PublisherId" @(Model.SelectedPublisherIds.Contains(publisher.PublisherId) ? "checked" : "") />
                        <label class="form-check-label">@publisher.PublisherName</label>
                    </div>
                }
            </div>
        </div>

        <!-- Платформы -->
        <div class="mb-3">
            <label class="form-label">Платформы</label>
            <div>
                @foreach (var platform in Model.AllPlatforms)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="SelectedPlatformIds"
                               value="@platform.PlatformId" @(Model.SelectedPlatformIds.Contains(platform.PlatformId) ? "checked" : "") />
                        <label class="form-check-label">@platform.PlatformName</label>
                    </div>
                }
            </div>
        </div>

        <!-- Кнопки -->
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>